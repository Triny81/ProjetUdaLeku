<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <title>{% block title %}Uda Leku{% endblock %}</title>

  {% block stylesheets %}
    <link rel="stylesheet" href="{{asset('assets/css/bootstrap.min.css')}}">
  {% endblock %}

</head>
<body>

  {% block menu %}
  <header>
    <style language = "css">
    #leMenu {
      float:left;
    }

    #image {
      margin-left: 95px;
    }

    leMenu.vertical-menu {
      width: 200px; /* Set a width if you like */
    }

    .vertical-menu a {
      background-color: #f8f9fa; /* Grey background color */
      color: black; /* Black text color */
      display: block; /* Make the links appear below each other */
      padding: 12px; /* Add some padding */
      text-decoration: none; /* Remove underline from links */
    }

    leMenu.vertical-menu a:hover {
      background-color: #ccc; /* Dark grey background on mouse-over */
    }

    leMenu.vertical-menu a.active {
      background-color: #4CAF50; /* Add a green color to the "active/current" link */
      color: white;
    }

    #titreMenu{
      font-size: 35px;
      text-decoration: underline;
      color : #ed2e3d;
      font-weight: bold;
    }

    #gestionSejours{
      font-size: 15px;
      color : #00ac79;
      font-weight: bold;
    }

    #gestionAffaires{
      font-size: 15px;
      color : #00ac79;
      font-weight: bold;
    }

    #listeAffaires{
      font-size: 15px;
      color : #00ac79;
      font-weight: bold;
    }

    #gestionEnfants{
      font-size: 15px;
      color : #00ac79;
      font-weight: bold;
    }

    </style>


  <center>
  <nav class="navbar navbar-light bg-light"  id="barre">
    <a class="navbar-brand" href="/">
      <div id="logo">
        <a href="/gestionSejours"><img src="https://udaleku.eus/lib/css/irudik/logoa-lauki.png" height="170" width="170" class="img-fluid" id="image"></a>
      </div>
    </a>
    <a href="/logout" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Déconnexion</a>
  </nav>
</center>
</header>

 <div  id = "leMenu">
   <div class="vertical-menu">
   <a href="#" class="inactive" id = "titreMenu" >Menu</a>
   <a href="{{path('sejour_index')}}" id = "gestionSejours">Gestion des séjours</a>
   <a href="#" id = "listeAffaires" >Gestion des listes<br>d'affaires</a>
   <a href="{{path('affaire_index')}}" id = "gestionAffaires" >Gestion des affaires</a>
   <a href="{{path('enfant_index')}}" id = "gestionEnfants">Gestion des enfants</a>
 </div>
</div>

  {% endblock %}

  {% block body %}  
  {% endblock %}

  {% block javascripts %}
  <script src="{{asset('https://code.jquery.com/jquery-3.3.1.slim.min.js')}}" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="{{asset('https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js')}}" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="{{asset('assets/js/bootstrap.js')}}"></script> 
  {% endblock %}
</body>
</html>
