{% extends 'base.html.twig' %}

{% block title %} Nouveau séjour {% endblock %}

{% block body %}
    <h1> Création d'un séjour </h1>

    {# {{ include('sejour/_form.html.twig') }} #}
	
	<a class="btn btn-primary" href="{{ path('sejour_creation') }}" role="button"> Créer </a>
	<a class="btn btn-primary" href="#" role="button"> Ouvrir </a>
	
	<div class="btn-group" role="group">
		<button id="btnGroupDrop1" type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
		  Options
		</button>
		<div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
		  <a class="dropdown-item disabled" href="#"> Modifier </a>
		  <a class="dropdown-item disabled" href="#"> Supprimer </a>
		  <a class="dropdown-item disabled" href="#"> Imprimer, générer </br> et publipostage </a>
		</div>
	</div>
	
	<a class="btn btn-primary" href="#" role="button"> Valider </a>
	<a class="btn btn-primary" href="{ path('sejour_index') }}" role="button"> Annuler </a>
	<hr>
	
	{{ form_start(form) }}

	<div class="modal-body row">
		<div class="col-md-6">
			
		{# Partie concernant le séjour #}
			<fieldset>
				<legend> {{ sejour.nom }} </legend>
				{{ form_row(form.nom) }}
				
				<div class="container">
				  <div class="row">
					<div class="col"> {{ form_row(form.date_debut) }} </div>
					<div class="col"> {{ form_row(form.date_fin) }} </div>
					<div class="w-100"></div>
					<div class="col"> {{ form_row(form.num_ministre) }} </div>
					<div class="col"> {{ form_row(form.cout) }} </div>
				  </div>
				</div>	
			</fieldset>

			</br></br>
			
			{{ form_row(form.listeAffaire) }}
			
			<table class="table">
				<thead>
					<tr>
						<th> Quantité </th>
						<th> Français </th>
						<th> Euskara </th>
						<th> Type </th>
					</tr>
				</thead>
				<tbody>
					{# {% for affaire in sejour.listeAffaire.affaire  %} #}
						<tr>
							<td> Quantité </td>
							<td> Nom français </td>
							<td> Nom basque </td>
							<td> Nom Affaire </td>
						</tr>
					{# {% endfor %} #}
				</tbody>
			</table>
		</div>
		  <div class="col-md-6">
			
			{# Partie concernant les enfants #}
				
				<a class="btn btn-primary" href="#" role="button"> Ajouter </a>
				<table class="table">
					<thead>
						<tr>
							<th> Nom </th>
							<th> Prénom </th>
							<th> Centre </th>
						</tr>
					</thead>
					<tbody>
						{% for enfant in sejour.enfants  %}
							<tr>
								<td> {{ enfant.nom }} </td>
								<td> {{ enfant.prenom }} </td>
								<td> {{ enfant.centre.ville }} </td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			 
		  </div>
		</div>

		{{ form_widget(form) }}
		
		<button class="btn">{{ button_label|default('Save') }}</button>
		
	{{ form_end(form) }}

    <a href="{{ path('sejour_index') }}">back to list</a>
{% endblock %}
