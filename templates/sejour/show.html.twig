{% block title %}Sejour{% endblock %}

{% block body %}
    <h1>Sejour</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sejour.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ sejour.nom }}</td>
            </tr>
            <tr>
                <th>Date_debut</th>
                <td>{{ sejour.dateDebut ? sejour.dateDebut|date('Y-m-d') : '' }}</td>
