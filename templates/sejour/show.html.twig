                <th>Date_fin</th>
                <td>{{ sejour.dateFin ? sejour.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>N°_ministre</th>
                <td>{{ sejour.n°Ministre }}</td>
            </tr>
            <tr>
                <th>Cout</th>
