{% extends 'base.html.twig' %}

{% block title %} Sejour : {{sejour.nom}} {% endblock %}

{% block body %}
    <h1> Sejour : {{sejour.nom}} </h1>
	
	<a class="btn btn-primary" href="#" role="button"> Créer </a>
	<a class="btn btn-primary" href="#" role="button"> Ouvrir </a>
	
	<div class="btn-group" role="group">
		<button id="btnGroupDrop1" type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
		  Options
		</button>
		<div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
		  <a class="dropdown-item" href="#"> Modifier </a>
		  <a class="dropdown-item" href="#"> Supprimer </a>
		  <a class="dropdown-item" href="#"> Imprimer, générer </br> et publipostage </a>
		</div>
	</div>
	
	<a class="btn btn-primary" href="#" role="button"> Valider </a>
	<a class="btn btn-primary" href="#" role="button"> Annuler </a>
	<hr>
	
	<div class="modal-body row">
	  <div class="col-md-6">
		
		{# Partie concernant le séjour #}
			
				<fieldset disabled>
					<legend> {{ sejour.nom }} </legend>
					Séjour <input type="text" placeholder=" {{sejour.nom}} ">
					
					<div class="container">
					  <div class="row">
						<div class="col"> Date de début <input type= text placeholder=" {{ sejour.dateDebut ? sejour.dateDebut|date('Y-m-d') : '' }} "> </div>
						<div class="col"> Date de fin  <input type= text placeholder=" {{ sejour.dateFin ? sejour.dateFin|date('Y-m-d') : '' }} "> </div>
						<div class="w-100"></div>
						<div class="col"> N°Ministre <input type= text placeholder=" {{sejour.numMinistre}} "> </div>
						<div class="col"> Coût <input type= text placeholder=" {{sejour.cout}} "> </div>
					  </div>
					</div>	
				</fieldset>
				
				</br></br>
				
				Liste d'affaire pour ce séjour : 
				<select class=form-control-5 disabled>
						<option value=un> {{sejour.listeAffaire}} </option>
				</select>
				<a class="btn btn-primary" href="#" role="button"> Modifier </a>
				
				<table class="table">
					<thead>
						<tr>
							<th> Quantité </th>
							<th> Français </th>
							<th> Euskara </th>
							<th> Type </th>
						</tr>
					</thead>
					<tbody>
						{% for affaire in sejour.listeAffaire  %}
						<tr>
							<th> affaire.quantite </th>
							<th> affaire.nomFrancais </th>
							<th> affaire.nomBasque </th>
							<th> affaire.type </th>
						</tr>
					{% endfor %}
					</tbody>
				</table>
		
	  </div>
	  <div class="col-md-6">
		
		{# Partie concernant les enfants #}
			
			Liste des enfants inscrits à ce séjour <a class="btn btn-primary" href="#" role="button"> Ajouter </a>
			<table class="table">
				<thead>
					<tr>
						<th> Nom </th>
						<th> Prénom </th>
						<th> Centre </th>
					</tr>
				</thead>
				<tbody>
					{% for enfant in sejour.enfants  %}
						<tr>
							<th> enfant.nom </th>
							<th> enfant.prenom </th>
							<th> enfant.centre </th>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		 
	  </div>
	</div>

