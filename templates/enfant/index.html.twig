{% extends 'base.html.twig' %}

{% block title %}Gestionnaires d'inscription des enfants{% endblock %}

{% block titrePage %}Gestion des enfants{% endblock %}

{% block outils %}
<a type="button" href="{{path('enfant_creation')}}" class="btn btn-success">
    Inscrire un nouvel enfant
</a>
{% endblock %}

{% block body %}

<table class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Date de naissance</th>
            <th>Centre</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for enfant in enfants %}
        <tr>
            <td>{{ enfant.nom }}</td>
            <td>{{ enfant.prenom }}</td>
            <td>{{ enfant.dateNaiss ? enfant.dateNaiss|date('d/m/Y') : '' }}</td>
            <td>{{ enfant.centre.ville }}</td>
            <td>
                <a type="button" href="{{path('enfant_consultation',{'id':enfant.id})}}" class="btn btn-primary">
                    Consulter
                </a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="10">Aucun enfant n'a été encore inscrit... Pourquoi ne pas en inscrire un maintenant ?</td>
        </tr>
        {% endfor %}
        
    </tbody>
</table>


{% endblock %}
