{% extends 'base.html.twig' %}

{% block title %}Modification fiche d'enfant{% endblock %}

{% block titrePage %}Modification de la fiche d'un enfant{% endblock %}

{% block outils %}
<a type="button" href="{{path('enfant_creation')}}" class="btn btn-success" id="prout">
    Inscire un nouvel enfant
</a>
<input type="button" class="btn btn-primary" id="faux_submit" value="Enregistrer !"/>
<a class="btn btn-secondary" href="{{ path('enfant_consultation',{'id':enfant.id}) }}" role="button">Annuler les modifications</a>

<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalSuppressionEnfant">Désinscrire</button>
{% endblock %}

{% block body %}

    {{ include('enfant/_form.html.twig') }}

    <!-- Modal suppression enfant -->
<div class="modal fade" id="modalSuppressionEnfant" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Désinscrire un enfant</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
      </button>
  </div>
  <div class="modal-body">
    <h3><center>Êtes-vous sûr de vouloir désinscrire {{enfant.prenom}} {{enfant.nom}} ?</center></h3>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Ne pas désinscrire</button>{{ include('enfant/_delete_form.html.twig') }}
    </div>
</div>
</div>
</div>


<script src="{{asset('https://code.jquery.com/jquery-3.5.0.js')}}"></script>
<script type="text/javascript">
       $('#faux_submit').on("click", function () { // on a click on the button with id 'one'
              var input = this;
              input.disabled  = true;
              $('#vrai_submit').trigger('click');
        });
</script>

{% endblock %}

