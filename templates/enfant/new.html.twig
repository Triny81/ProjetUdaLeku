{% extends 'base.html.twig' %}

{% block title %}Nouvel Enfant{% endblock %}

{% block outils %}
	<a type="button" href="{{path('enfant_creation')}}" class="btn btn-success" id="prout">
		Inscrire un nouvel enfant
	</a>
	<input type="button" class="btn btn-primary" id="faux_submit" value="Enregistrer !"/>

	<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalSuppressionEnfant">DÃ©sinscrire</button>
{% endblock %}

{% block body %}
  <div class="row">
    <div class="col-md-10">
		<h1>Inscription d'un enfant</h1>
      		{% set tabMessages = [] %}
        	{% for message in app.flashes('error') %}
            	{% set tabMessages = tabMessages|merge([message]) %}
        	{% endfor %}
        	{% if tabMessages.0 is defined %}
        	<div class="alert alert-danger">
        		{% for message in tabMessages %}
            		{{ message }}
            		<br />
        		{% endfor %}
        	</div>
        	{% endif %}
    </div>
    <div class="col-md-2">
      <a type="button" class="btn btn-small btn-primary" href="{{ path('enfant_index') }}">Retour</a>
    </div>
  </div>
    
    {{ include('enfant/_form.html.twig') }}
	
	<script src="{{asset('https://code.jquery.com/jquery-3.5.0.js')}}"></script>
	<script type="text/javascript">
       $('#faux_submit').on("click", function () { // on a click on the button with id 'one'
              var input = this;
              $('#vrai_submit').trigger('click');
        });
</script>
    
{% endblock %}
